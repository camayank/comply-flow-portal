{
  "name": "jest-config",
  "preset": "ts-jest",
  "testEnvironment": "node",
  "roots": [
    "<rootDir>/server"
  ],
  "testMatch": [
    "**/__tests__/**/*.ts",
    "**/?(*.)+(spec|test).ts"
  ],
  "transform": {
    "^.+\\.ts$": "ts-jest"
  },
  "collectCoverageFrom": [
    "server/**/*.ts",
    "!server/**/*.d.ts",
    "!server/**/__tests__/**",
    "!server/**/node_modules/**"
  ],
  "coverageThresholds": {
    "global": {
      "branches": 60,
      "functions": 60,
      "lines": 60,
      "statements": 60
    }
  },
  "setupFilesAfterEnv": ["<rootDir>/server/__tests__/setup.ts"],
  "testTimeout": 10000
}
