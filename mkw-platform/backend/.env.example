# Database Configuration
DATABASE_URL=postgresql://mkw_user:mkw_secure_2024!@localhost:5432/mkw_platform
DB_HOST=localhost
DB_PORT=5432
DB_NAME=mkw_platform
DB_USER=mkw_user
DB_PASSWORD=mkw_secure_2024!

# Security Configuration (REQUIRED - Generate strong secrets)
JWT_SECRET=your-super-secure-jwt-secret-minimum-32-characters-long-change-this-in-production
SESSION_SECRET=your-super-secure-session-secret-minimum-32-characters-long-change-this-in-production
CREDENTIAL_ENCRYPTION_KEY=your-super-secure-encryption-key-minimum-32-characters-long-change-this-in-production

# Environment
NODE_ENV=development
PORT=5000

# CORS Configuration
FRONTEND_URL=http://localhost:3000
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Cookie Configuration
COOKIE_DOMAIN=localhost
COOKIE_SECURE=false

# Rate Limiting (Redis recommended for production)
RATE_LIMITER_STORE=memory
REDIS_URL=redis://localhost:6379

# Email Configuration (for OTP delivery)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=MKW Platform <noreply@mkwadvisors.com>

# Security Features
ENABLE_CAPTCHA=true
CAPTCHA_PROVIDER=hcaptcha
HCAPTCHA_SITE_KEY=your-hcaptcha-site-key
HCAPTCHA_SECRET_KEY=your-hcaptcha-secret-key

# Development Settings
DEBUG_OTP=false
DEBUG_SESSIONS=false
LOG_LEVEL=info

# Monitoring
ENABLE_PROMETHEUS_METRICS=false
METRICS_PORT=9090

# File Upload
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=jpg,jpeg,png,pdf,doc,docx
UPLOAD_STORAGE=local

# AWS Configuration (if using AWS services)
AWS_REGION=ap-south-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
S3_BUCKET_NAME=mkw-platform-uploads

# Payment Gateway (Razorpay for Indian market)
RAZORPAY_KEY_ID=rzp_test_xxxxxxxxx
RAZORPAY_KEY_SECRET=your-razorpay-secret

# Analytics
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# Feature Flags
ENABLE_REAL_TIME_SYNC=true
ENABLE_ADVANCED_ANALYTICS=true
ENABLE_MOBILE_API=true

# Backup Configuration
BACKUP_ENCRYPTION_KEY=your-backup-encryption-key-minimum-32-characters
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30